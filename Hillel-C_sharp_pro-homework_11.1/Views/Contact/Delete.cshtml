@model Hillel_C_sharp_pro_homework_11.Models.Contact

<div class="container shadow p-5 container-custom" align="center">
    <div class="row pb-2">
        <h2>Delete Contact</h2>
    </div>

    <form method="post" asp-action="DeleteContact">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6" align="left">
                <label asp-for="Name">Contact Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name" disabled>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6" align="left">
                <label asp-for="Phone">Phone</label>
                <input type="tel" class="form-control mb-3" asp-for="Phone" placeholder="Enter Phone" disabled>
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6" align="left">
                <label asp-for="AdditionalPhone">Additional Phone</label>
                <input type="tel" class="form-control mb-3" asp-for="AdditionalPhone" placeholder="Enter Phone" disabled>
                <span asp-validation-for="AdditionalPhone" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6" align="left">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control mb-3" asp-for="Email" placeholder="Enter Email" disabled>
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3" align="left">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Enter Email" disabled>
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}