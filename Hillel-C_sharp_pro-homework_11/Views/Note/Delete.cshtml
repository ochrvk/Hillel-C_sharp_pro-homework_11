@model Note

<div class="container shadow p-5" align="center">
    <div class="row pb-2">
        <h2>Delete Note</h2>
    </div>

    <form method="post" asp-action="DeleteNote">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6" align="left">
                <label asp-for="Name">Note Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name" disabled>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6" align="left">
                <label asp-for="Text">Text</label>
                <input type="text" class="form-control mb-3" asp-for="Text" placeholder="Enter Text" disabled>
                <span asp-validation-for="Text" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6" align="left">
                <label asp-for="Tags">Tags</label>
                <input type="text" class="form-control mb-3" asp-for="Tags" placeholder="Enter Tags" disabled>
                <span asp-validation-for="Tags" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3" align="left">
                <label asp-for="CreatedAt">Created At</label>
                <input type="datetime-local" class="form-control" asp-for="CreatedAt" disabled>
                <span asp-validation-for="CreatedAt" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}